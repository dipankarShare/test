{
  "citi_credit": {
    "name": "Citi Credit Card",
    "type": "credit_card",
    "provider": "Citi",
    "keywords": [
      "citi",
      "citibank",
      "credit card",
      "citi double cash",
      "citi premier",
      "citi custom cash",
      "citi rewards"
    ],
    "patterns": {
      "statement_date": {
        "pattern": "(?:Statement Date|Closing Date|Billing Date)[:\\s]*(\\d{1,2}[/-]\\d{1,2}[/-]\\d{2,4})",
        "description": "Statement date"
      },
      "payment_due_date": {
        "pattern": "(?:Payment Due Date|Due Date|Payment Due)[:\\s]*(\\d{1,2}[/-]\\d{1,2}[/-]\\d{2,4})",
        "description": "Payment due date"
      },
      "new_balance": {
        "pattern": "(?:New Balance|Current Balance|Statement Balance|Total Amount Due)[:\\s]*\\$?([-\\d,]+\\.?\\d*)",
        "description": "New Balance (current statement balance)"
      },
      "minimum_payment_due": {
        "pattern": "(?:Minimum Payment|Minimum Payment Due)[:\\s]*\\$?([-\\d,]+\\.?\\d*)",
        "description": "Minimum Payment Due amount"
      },
      "transactions_section": {
        "header_pattern": "Date|Description|Amount|Category|Reference",
        "start_patterns": [
          "Transactions",
          "Purchases",
          "Activity",
          "Charges",
          "Account Activity"
        ],
        "end_patterns": [
          "Total",
          "Summary",
          "Payment Information",
          "Fees and Interest",
          "Interest Charge Calculation"
        ],
        "description": "Credit card transactions section"
      },
      "transaction_line": {
        "pattern": "(\\d{1,2}[/-]\\d{1,2}[/-]\\d{2,4})\\s+([^\\$]+?)\\s+\\$?([-\\d,]+\\.?\\d*)",
        "groups": {
          "date": 1,
          "description": 2,
          "amount": 3
        },
        "description": "Individual transaction line format"
      },
      "fees_section": {
        "header_pattern": "Fees|Interest|Charges",
        "start_patterns": [
          "Fees and Interest",
          "Interest Charge Calculation",
          "Interest Charges"
        ],
        "end_patterns": ["Total", "Summary"],
        "description": "Fees and interest charges section"
      },
      "payment_section": {
        "header_pattern": "Payment|Credit|Refund",
        "start_patterns": ["Payments and Credits", "Credits", "Payments"],
        "end_patterns": ["Total", "Summary", "Transactions"],
        "description": "Payments and credits section"
      }
    },
    "required_fields": [
      "statement_date",
      "payment_due_date",
      "new_balance",
      "minimum_payment_due"
    ],
    "import_fields": ["date", "description", "amount"],
    "balance_logic": {
      "negative_amounts": "expenses/charges",
      "positive_amounts": "payments/credits",
      "balance_owed": "negative_balance"
    }
  }
}
